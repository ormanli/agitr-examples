<launch>
  <include
    file="$(find agitr)/doublesim.launch"
  />
  <arg
    name="use_sim3"
    default="0"
  />

  <group ns="sim3" if="$(arg use_sim3)" >
    <node
      name="turtlesim_node"
      pkg="turtlesim"
      type="turtlesim_node"
    />
    <node
      pkg="turtlesim"
      type="turtle_teleop_key"
      name="teleop_key"
      required="true"
      launch-prefix="xterm -e"
    />
  </group>
</launch>